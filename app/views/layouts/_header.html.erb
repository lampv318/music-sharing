<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-lg-0" style="margin-left: 50px ">
        <li class="nav-item">
          <%= link_to root_path, id: "logo", style: 'color: gray' do %>
            <%= image_tag 'logo.png', style: 'width: 30px; height: 30px' %>
          <% end %>
        </li>
      </ul>
      <div class="d-flex">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if logged_in? %>
            <li class="nav-link">
              <p class="text-center" style="padding-top: 7px"><%= "#{current_user.email}" %></p>
            </li>
            <li class="nav-link">
              <%= link_to "Share Video", new_shared_video_path, class: 'btn btn-outline-success', 'data-bs-toggle': :modal, 'data-bs-target': "#staticBackdrop" %>
              <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                  <%= form_for(current_user.shared_videos.new, local: true) do |f| %>
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Share a Youtube Video</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <div class="row justify-content-md-center">
                          <div class="col col-lg-2">
                            <%= f.label :link, 'Youtube URL', style: 'padding-top: 6px' %>
                          </div>
                          <div class="col-md-8">
                            <%= f.text_field :link, class: 'form-control', placeholder: "" %>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <%= f.submit "Share", class: "btn btn-outline-success"%>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </li>
            <li class="nav-link">
              <%= button_to "Log out", logout_path, method: :delete, class: 'btn btn-outline-success' %>
            </li>
          <% else %>
            <li class="nav-link">
              <%= link_to "Share Video", login_path, class: 'btn btn-outline-success' %>
            </li>
            <li class="nav-link">
              <%= link_to "Log in", login_path, class: 'btn btn-outline-success' %>
            </li>
            <li class="nav-link">
              <%= link_to "Register", signup_path, class: 'btn btn-outline-success' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>
